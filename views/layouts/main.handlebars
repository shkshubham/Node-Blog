<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8"/ >
    {{#if post}}
    <title>{{post.title}} - NodeBlog</title>
    {{else}}
    <title>NodeBlog</title>
    {{/if}}
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css" integrity="sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb" crossorigin="anonymous">
    <style>
#main-container{
            min-height: 600px;
            margin-top: 100px;
          }

.card-image{
height: 180px;
width:260px;
padding: 20px 20px;
margin-left: 30px;
margin-top: 20px;
}

input, textarea {
  outline: none;
  border: none;
  margin: 0;
  padding: 0;
  color: #555f77;
}
.comments {
  margin: 20px 0;
  padding: 0 20px;
}

.comment-wrap {
  margin-bottom: 20px;
  display: table;
  width: 100%;
  min-height: 80px;
}

.photo {
  padding-top: 10px;
  display: table-cell;
  width: 56px;
}
.photo .avatar {
  height: 36px;
  width: 36px;
  border-radius: 50%;
  background-size: contain;
}

.comment-block {
  padding: 1rem;
  background-color: #fff;
  display: table-cell;
  vertical-align: top;
  border-radius: 0.1875rem;
  box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.08);
}
.comment-block textarea {
  width: 100%;
}

.comment-text {
  margin-bottom: 1.25rem;
}

.bottom-comment {
  color: #acb4c2;
  font-size: 0.875rem;
}

.comment-date {
  float: left;
}

.footer{
  margin-top: 20px;
  background-color: #212529;
  color: white;
  text-align: center;
}
.login_buttons{
  margin-top: 20px;
}
</style>
</head>
<body>
  {{>navbar}}
  <div id="main-container">
    <div class="container">
      <div class="row">
          {{{body}}}
      </div>
    </div>
  </div>
{{>footer}}

<script src="https://code.jquery.com/jquery-3.2.1.min.js" charset="utf-8"></script>
<script type='text/javascript' src='https://api.stackexchange.com/js/2.0/all.js'></script>
<script>
$(function(){
        $("#frm_details").on("submit", function(event) {
            event.preventDefault();
            var formData = {
                post_slug: $('input[name=post_slug]').val(),
                text: $('textarea[name=comment]').val()
            };
            console.log(formData);

            $.ajax({
                url: "/comment/store",
                type: "post",
                data: formData,
                success: function(d) {
                      var txt1 = `<div class="comment-wrap"><div class="photo"><div class="avatar" style="background-image: url('{{user.avatar}}')"></div></div><div class="comment-block"><p class="comment-text">${formData.text}</p><div class="bottom-comment"><div class="comment-date">Now</div></div></div></div>`;
                      $("#comments-list").prepend(txt1);
                }
            });
        });
    })
</script>

<script type='text/javascript'>
$(function(){
SE.init({
    clientId: 11276,
    key: 'tWJ6z6HAr90QaUGYwfSRng((',
    channelUrl: 'http://pacific-crag-58243.herokuapp.com/auth/stack/callback',
    complete: function(data) {
        $('#login-button')
            .removeAttr('disabled')
            .text('Run Example With Version '+data.version);
    }
});

$('#login-button').click(function() {
    SE.authenticate({
        success: function(data) {
            alert(
                'User Authorized with account id = ' +
                data.networkUsers[0].account_id + ', got access token = ' +
                data.accessToken
            );
              console.log(data.networkUsers[0]);
        },
        error: function(data) {
            alert('An error occurred:\n' + data.errorName + '\n' + data.errorMessage);
        },
        networkUsers: true
    });
});
});
</script>


</body>
</html>

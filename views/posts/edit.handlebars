<form action="/post/update" method="post">
  <input type="hidden" name="_method" value="put" />
  <div class="form-group" >
    <label for="Title">Title</label>
    <input type="text" class="form-control" value="{{post.title}}" name="title" id="Title" aria-describedby="TitleHelp" placeholder="Enter Title">
  </div>
  <div class="form-group">
    <label for="Content">Content</label>
    <textarea class="form-control" name="content" rows="8" cols="80">{{post.body}}</textarea>
  </div>
    <div class="form-group">
  <label for="file">Select your image:</label>
    <input type="file" class="form-control" name="postImage" id="imageUpload" value="{{post.image}}" />
  </div>
  <button type="submit" class="btn btn-primary">Update</button>
</form>

<form action="/post/store" method="post">
  <div class="form-group" >
    <label for="Title">Title</label>
    <input type="text" class="form-control" id="Title" aria-describedby="emailHelp" placeholder="Enter Title">
    <small id="titleHelp" class="form-text text-muted">Enter Title in Strings Only.</small>
  </div>
  <div class="form-group">
    <label for="Content">Content</label>
    <textarea class="form-control" name="content" rows="8" cols="80"></textarea>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
